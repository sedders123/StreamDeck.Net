    <LangVersion>7.3</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>James Seden Smith</Authors>
    <Description>A .NET Core interface for the StreamDeck SDK</Description>
    <Copyright>James Seden Smith</Copyright>
    <RepositoryUrl>https://github.com/sedders123/StreamDeck.Net</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/sedders123/StreamDeck.Net/blob/master/LICENSE</PackageLicenseUrl>
    <Version>0.2.0</Version>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="System.IO.Pipelines" Version="4.7.1" />
    <PackageReference Include="System.Net.WebSockets" Version="4.3.0" />
  </ItemGroup>
</Project>
